@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row border p-1">
        <h3>Deathly Hallow Race </h3>
        <div class="col-4">
            <div>Perikatan Nasional - <span id="pnCounter"></span></div>

        </div>
        <div class="col-4">
            <div>Pakatan Harapan - <span id="phCounter"></span></div>

        </div>
        <div class="col-4">
            <div>Barisan Nasional - <span id="bnCounter"></span></div>

        </div>
        <hr />
        <p>Url to Vote:</p>
        <div>1. Invisibility Cloak - https://localhost:7001/Home/voting?type=pn </div>
        <div>2. Resurrection Stone - https://localhost:7001/Home/voting?type=ph </div>
        <div>3. Elder Wand - https://localhost:7001/Home/voting?type=bn </div>
    </div>

    <div class="row">
        <div class="col-3">Total Views: </div>
        <div class="col-4">
            <span id="totalViewsCounter"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-3">Total Connection/Users: </div>
        <div class="col-4">
            <span id="totalUsersCounter"></span>
        </div>
    </div>
</div>

<script src="~/js/signalr.js"></script>
<script src="~/js/userscount.js"></script>
<script src="~/js/votingcount.js"></script>